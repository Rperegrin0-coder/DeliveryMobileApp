<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="68dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- TextView for Parcel Description -->
            <TextView
                android:id="@+id/tvParcelDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcel Description: " />

            <!-- TextView for Parcel Weight -->

            <TextView
                android:id="@+id/r_parcelDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Parcel Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tvParcelWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcel Weight: " />

            <TextView
                android:id="@+id/parcelWeightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Parcel Weight"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />



            <!-- TextView for Pickup Address -->
            <TextView
                android:id="@+id/tvPickupAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Address: " />

            <TextView
                android:id="@+id/pickupAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="123 Main Street, City, State, Zip"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Pickup Contact Name -->
            <TextView
                android:id="@+id/tvPickupContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Contact Name: " />

            <TextView
                android:id="@+id/pickupContactNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="John Doe"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Pickup Contact Phone -->
            <TextView
                android:id="@+id/tvPickupContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Contact Phone: " />

            <TextView
                android:id="@+id/pickupContactPhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="123-456-7890"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Add more TextViews for other details like delivery address, delivery recipient name, etc. -->
            <!-- TextView for Delivery Address -->
            <TextView
                android:id="@+id/tvDeliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address: " />

            <TextView
                android:id="@+id/deliveryAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="456 Elm Street, City, State, Zip"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Delivery Recipient Name -->
            <TextView
                android:id="@+id/tvDeliveryRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Recipient Name: " />

            <TextView
                android:id="@+id/deliveryRecipientNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Jane Smith"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Delivery Recipient Phone -->
            <TextView
                android:id="@+id/tvDeliveryRecipientPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Recipient Phone: " />

            <TextView
                android:id="@+id/deliveryRecipientPhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="987-654-3210"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Pickup Date and Time -->
            <TextView
                android:id="@+id/tvPickupDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Date and Time: " />

            <TextView
                android:id="@+id/pickupDateTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="February 13, 2024, 10:00 AM"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Delivery Date and Time -->
            <TextView
                android:id="@+id/tvDeliveryDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Date and Time: " />

            <TextView
                android:id="@+id/deliveryDateTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="February 14, 2024, 2:00 PM"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- TextView for Additional Instructions -->
            <TextView
                android:id="@+id/tvAdditionalInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Instructions: " />

            <TextView
                android:id="@+id/additionalInstructionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Leave package by the door"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
